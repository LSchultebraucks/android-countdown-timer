<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.schultebraucks.lasse.countdowntimer.MainActivity">

    <Button
            android:text="-1 Minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSubtractTime"
            android:textAllCaps="false"
            android:layout_alignBaseline="@+id/buttonStartStop" android:layout_alignBottom="@+id/buttonStartStop"
            android:layout_toRightOf="@+id/buttonStartStop" android:layout_toEndOf="@+id/buttonStartStop"
            android:layout_marginLeft="56dp" android:layout_marginStart="56dp"/>
    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonStartStop"
            android:textAllCaps="false"
            tools:layout_editor_absoluteX="50dp"
            android:layout_marginTop="113dp"
            android:layout_alignTop="@+id/textTimer" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="76dp" android:layout_marginStart="76dp"/>
    <TextView
            android:text="20:00"
            android:textSize="20pt"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="51dp"
            android:id="@+id/textTimer" tools:layout_editor_absoluteX="126dp"
            android:layout_marginTop="110dp"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <Button
            android:text="Reset"
            android:textAllCaps="false"
            android:id="@+id/buttonReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/buttonStartStop"
            android:layout_alignLeft="@+id/buttonStartStop" android:layout_alignStart="@+id/buttonStartStop"
            android:layout_marginTop="19dp"/>


</android.widget.RelativeLayout>
